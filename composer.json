{
    "name": "mister-glass/camel-case-to-dash-case-name-converter",
    "description": "Converts camel case strings to/from Dash case. Heavily based on Symfonys CamelCaseToSnakeCaseNameConverter function",
    "license": "MIT",
    "require": {
        "php": ">=5.5.9",
        "symfony/serializer": ">=2.7"
    },
    "autoload": {
        "psr-4": { "MrGlass\\CamelCaseToDashCaseNameConverter\\": "src/" }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "sensiolabs/security-checker": "*"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit",
            "./vendor/bin/phpcs src Tests --standard=PSR2",
            "./vendor/bin/security-checker security:check composer.lock"
        ]
    }
}
